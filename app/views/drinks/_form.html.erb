        <%= f.text_field :venue, :class => 'span4' %>
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'span4', :rows => '4' %>
        <%= f.label :instructions %>
        <%= f.text_area :instructions, :class => 'span4', :rows => '4' %>
