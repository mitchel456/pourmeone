        <ul class='ingredient-list'>
          <li id="ingredient"></li>
        </ul>
        <span class="clearfix help-block muted">Press Enter to add more ingredients</span>
        <%= f.label :filepicker_url, "Upload a photo" %>
        <%= f.filepicker_field :filepicker_url %>
      </div>

    </fieldset>

    <div class="actions">
      <%= f.submit :class => 'btn' %>
    </div>

  </form>


