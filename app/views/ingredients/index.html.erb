<h1>Listing ingredients</h1>

<table>
  <tr>
    <th>String</th>
    <th>Parent ingredient</th>
    <th>Description</th>
    <th>Approved</th>
    <th>Submitted by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.string %></td>
    <td><%= ingredient.parent_ingredient %></td>
    <td><%= ingredient.description %></td>
    <td><%= ingredient.approved %></td>
    <td><%= ingredient.submitted_by %></td>
    <td><%= link_to 'Show', ingredient %></td>
    <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
    <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

