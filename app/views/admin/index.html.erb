<% content_for :javascript_includes do %>
	<%= javascript_include_tag "admin/index" %>
<% end %>

<div class="row">
	<div id="drinks-box" class="span6">
		<form>
			<label for="drink_name">Name</label>
			<input id="drink_name" name="drink_name" type="text" />
			<table class="table table-bordered">
				<thead><tr><th>Raw Text</th><th>Ingredient</th></tr></thead>
				<tbody id="ingredients-table"></tbody>
			</table>
			<input id="approve_drink" type="button" value="Approve and Continue" class="btn btn-primary" />
		</form>	
	</div>

	<div class="span6">
		<table id="drinks-table" class="table table-striped table-bordered">
			<thead><tr><th>Name</th></tr></thead>
			<tbody id="drinks-table-body"></tbody>
		</table>
	</div>
</div>

<script id="editable-text-cell" type="text/x-handlebars-template">
	<span>{{ field }}</span>
	<input type="text" value="{{ field }}" />
</script>

<script id="action-cell" type="text/x-handlebars-template">
	<input type="button" value="{{ label }}" />
</script>

<script id="autocomplete-cell" type="text/x-handlebars-template">
	<input type="hidden" class="ac-value" />
	<input type="text" class="ac-display" />
</script>